<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:clipChildren="false">

    <android.support.v7.widget.CardView
        android:id="@+id/target_translation_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/stacked_card_margin"
        android:layout_marginTop="@dimen/stacked_card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"
        android:clickable="true">

        <com.door43.widget.LinedLinearLayout
            android:id="@+id/target_translation_inner_card"
            android:orientation="vertical"
            style="@style/Widget.CardContent.Stacked"
            android:background="@drawable/paper_repeating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="@dimen/title"
                android:layout_marginBottom="@dimen/stacked_card_margin"
                android:textColor="@color/dark_secondary_text"
                android:text="John 1:1-3"
                android:id="@+id/target_translation_title" />

            <com.door43.widget.LinedEditText
                android:id="@+id/target_translation_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="this is the top ca\nsdf\nsdf\ndf\nsdfrd\nlsjdflkjsd\nlksjdflksjdflksd\nlkjsdlfkjsdlkjsfdl\nlksjdlfkjsd"
                android:textSize="@dimen/body"
                android:focusable="true"
                android:gravity="top"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textNoSuggestions|text|textMultiLine"
                android:focusableInTouchMode="true"
                android:background="@null"
                android:textColor="@color/dark_primary_text"
                android:visibility="visible" />

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:id="@+id/conflict_frame"
                android:visibility="gone"
                android:paddingBottom="@dimen/dialog_content_margin"
                android:paddingTop="@dimen/dialog_content_margin">

                <Button
                    android:text="@string/conflict_exists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/stacked_card_margin"
                    android:layout_marginRight="@dimen/stacked_card_margin"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:paddingLeft="@dimen/dialog_controls_margin"
                    android:paddingRight="@dimen/dialog_controls_margin"
                    android:visibility="gone"
                    android:id="@+id/conflict_button"
                    style="@style/Widget.Alert.Button"
                    android:background="@color/warning"
                    android:textSize="@dimen/title"
                    android:textColor="@color/light_primary_text"/>

            </FrameLayout>

        </com.door43.widget.LinedLinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/source_translation_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="3dp"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginRight="@dimen/stacked_card_margin"
        android:layout_marginBottom="@dimen/stacked_card_margin"
        android:clickable="true">

        <LinearLayout
            android:orientation="vertical"
            style="@style/Widget.CardContent.Stacked.Skinny"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin">
                <android.support.design.widget.TabLayout
                    android:id="@+id/source_translation_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/stacked_card_margin"
                    android:layout_marginLeft="@dimen/stacked_card_margin"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:layout_scrollFlags="scroll|enterAlways"/>
                <ImageButton
                    android:id="@+id/new_tab_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/card_margin"
                    android:paddingRight="@dimen/stacked_card_margin"
                    android:layout_gravity="right|center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/icon_tabedit_normal"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body"
                android:layout_gravity="right|center_vertical"
                android:textColor="@color/dark_secondary_text"
                android:text="John 1:1-3"
                android:layout_marginBottom="@dimen/stacked_card_margin"
                android:layout_marginLeft="@dimen/stacked_card_margin"
                android:layout_marginRight="@dimen/stacked_card_margin"
                android:id="@+id/source_translation_title" />

            <TextView
                android:id="@+id/source_translation_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/stacked_card_margin"
                android:layout_marginRight="@dimen/stacked_card_margin"
                android:text="this is the top ca\nsdf\nsdf\ndf\nsdfrd\nlsjdflkjsd\nlksjdflksjdflksd\nlkjsdlfkjsdlkjsfdl\nlksjdlfkjsd"
                android:textSize="@dimen/body"
                android:textColor="@color/dark_primary_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>