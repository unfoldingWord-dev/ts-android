<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minWidth="@dimen/dialog_min_width"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_controls_margin"
        android:layout_marginBottom="@dimen/dialog_controls_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_upload_export"
            android:textColor="@color/dark_primary_text"
            android:textSize="@dimen/headline"
            android:id="@+id/textView13" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/backup_to_cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contextClickable="true"
                android:layout_marginBottom="@dimen/dialog_controls_margin">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/backup_to_door43"
                        android:drawableLeft="@drawable/ic_backup_secondary_24dp"
                        android:drawableStart="@drawable/ic_backup_secondary_24dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/dark_primary_text"
                        android:textAllCaps="false"
                        style="@style/Widget.Button.Secondary"
                        android:focusable="false"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dialog_controls_margin" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ic_wifi_black_18dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:text="Current User: tester"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/current_user"
                        android:textColor="@color/dark_primary_text"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textSize="14sp" />

                    <Button
                        android:text="@string/log_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/logout_button"
                        android:textColor="@color/accent"
                        android:layout_marginLeft="@dimen/dialog_controls_margin"
                        android:gravity="center"
                        android:textSize="@dimen/button"
                        android:textAllCaps="false" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_backup_to_door43"
                    android:textColor="@color/dark_primary_text"
                    android:textAllCaps="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:gravity="start"
                    android:textSize="@dimen/caption"
                    android:layout_marginLeft="@dimen/dialog_content_margin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_separator"/>

            <LinearLayout
                android:id="@+id/export_to_usfm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contextClickable="true"
                android:layout_marginBottom="@dimen/dialog_controls_margin"
                android:visibility="visible">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/export_to_usfm"
                    android:drawableLeft="@drawable/icon_export_sd_dark"
                    android:drawableStart="@drawable/icon_export_sd_dark"
                    android:drawablePadding="10dp"
                    android:textColor="@color/dark_primary_text"
                    android:textAllCaps="false"
                    style="@style/Widget.Button.Secondary"
                    android:focusable="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/dialog_controls_margin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_export_to_usfm"
                    android:textColor="@color/dark_primary_text"
                    android:textAllCaps="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:gravity="start"
                    android:textSize="@dimen/caption"
                    android:layout_marginLeft="@dimen/dialog_content_margin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/export_to_usfm_separator"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_separator" />

            <LinearLayout
                android:id="@+id/export_to_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contextClickable="true"
                android:layout_marginBottom="@dimen/dialog_controls_margin">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/export_to_pdf"
                    android:drawableLeft="@drawable/icon_export_sd_dark"
                    android:drawableStart="@drawable/icon_export_sd_dark"
                    android:drawablePadding="10dp"
                    android:textColor="@color/dark_primary_text"
                    android:textAllCaps="false"
                    style="@style/Widget.Button.Secondary"
                    android:focusable="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/dialog_controls_margin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_export_to_pdf"
                    android:textColor="@color/dark_primary_text"
                    android:textAllCaps="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:gravity="start"
                    android:textSize="@dimen/caption"
                    android:layout_marginLeft="@dimen/dialog_content_margin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_separator"/>

            <LinearLayout
                android:id="@+id/backup_to_sd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:contextClickable="true"
                android:layout_marginBottom="@dimen/dialog_controls_margin">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backup_to_sd"
                    android:drawableLeft="@drawable/icon_export_sd_dark"
                    android:drawableStart="@drawable/icon_export_sd_dark"
                    android:drawablePadding="10dp"
                    android:textColor="@color/dark_primary_text"
                    android:textAllCaps="false"
                    style="@style/Widget.Button.Secondary"
                    android:focusable="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/dialog_controls_margin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_backup_to_sd"
                    android:textColor="@color/dark_primary_text"
                    android:textAllCaps="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:gravity="start"
                    android:textSize="@dimen/caption"
                    android:layout_marginLeft="@dimen/dialog_content_margin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_separator"/>

            <Button
                android:id="@+id/backup_to_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/backup_to_friend"
                android:drawableLeft="@drawable/ic_phone_android_secondary_24dp"
                android:drawableStart="@drawable/ic_phone_android_secondary_24dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="10dp"
                android:textColor="@color/dark_primary_text"
                android:textAllCaps="false"
                style="@style/Widget.Button.Secondary"
                android:padding="@dimen/dialog_controls_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_separator"/>

            <Button
                android:id="@+id/backup_to_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/backup_to_app"
                android:drawableLeft="@drawable/ic_share_secondary_24dp"
                android:drawableStart="@drawable/ic_share_secondary_24dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="10dp"
                android:textColor="@color/dark_primary_text"
                android:textAllCaps="false"
                style="@style/Widget.Button.Secondary"
                android:padding="@dimen/dialog_controls_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_separator"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right|end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2"
        android:paddingRight="@dimen/dialog_controls_margin"
        android:paddingBottom="@dimen/dialog_controls_margin">

        <Button
            android:id="@+id/dismiss_button"
            android:layout_marginLeft="@dimen/dialog_controls_margin"
            android:text="@string/dismiss"
            style="@style/Widget.Alert.Button"/>
    </LinearLayout>

</LinearLayout>