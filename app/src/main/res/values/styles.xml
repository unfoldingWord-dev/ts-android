<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textColorLinkInverse">@color/accent_light</item>

        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/AppActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/light_primary_text</item>

        <!-- Support library compatability -->
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="actionBarTabTextStyle">@style/AppActionBarTabText</item>
        <item name="actionMenuTextColor">@color/light_primary_text</item>

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@color/light_primary_text</item>
        <item name="actionMenuTextColor">@color/light_primary_text</item>
        <item name="android:textColorSecondary">@color/light_primary_text</item>
        <item name="colorControlNormal">@color/light_primary_text</item>
        <item name="colorControlHighlight">@color/light_primary_text</item>
    </style>

    <style name="AppActionBar" parent="@style/Widget.AppCompat.ActionBar">

        <item name="android:titleTextStyle">@style/AppActionBarTitleText</item>
        <item name="android:background">?attr/colorPrimary</item>

        <!-- Support library compatability -->
        <item name="titleTextStyle">@style/AppActionBarTitleText</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="AppActionBar.Light">
        <item name="android:titleTextStyle">@style/AppActionBarTitleText.Light</item>
        <item name="android:background">@color/shadow</item>

        <!-- Support library compatability-->
        <item name="titleTextStyle">@style/AppActionBarTitleText.Light</item>
        <item name="background">@color/shadow</item>
    </style>

    <style name="AppActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/light_primary_text</item>
    </style>

    <style name="AppActionBarTitleText.Light">
        <item name="android:textColor">@color/dark_primary_text</item>
    </style>

    <style name="AppActionBarTabText" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/light_primary_text</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CardContent.Skinny">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.CardContent.Stacked">
        <item name="android:paddingLeft">@dimen/stacked_card_margin</item>
        <item name="android:paddingRight">@dimen/stacked_card_margin</item>
        <item name="android:paddingTop">@dimen/card_margin</item>
        <item name="android:paddingBottom">@dimen/stacked_card_margin</item>
    </style>

    <style name="Widget.CardContent.Stacked.Skinny">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget.CardContent.Horizontal">
        <item name="android:paddingLeft">@dimen/stacked_card_margin</item>
        <item name="android:paddingRight">@dimen/stacked_card_margin</item>
        <item name="android:paddingTop">@dimen/card_margin</item>
        <item name="android:paddingBottom">@dimen/stacked_card_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.Button" parent="android:Widget.Button">
        <item name="android:padding">14dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.Alert.Button" parent="Widget.Button">
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="Widget.Button.Tag">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.Button.Secondary">
        <item name="android:textColor">@color/dark_secondary_text</item>
    </style>

    <style name="Widget.Alert.Button.Secondary">
        <item name="android:textColor">@color/dark_secondary_text</item>
    </style>

    <style name="Widget.Button.White">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/button</item>
    </style>

    <style name="Widget.Button.Grey">
        <item name="android:background">@color/dark_secondary_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button</item>
    </style>

    <style name="Widget.Button.Blue">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button</item>
    </style>

    <style name="Widget.Button.Blue.Small">
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="Widget.Button.Orange">
        <item name="android:background">@color/warning</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button</item>
    </style>

    <style name="Widget.Button.Green">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Button.Danger">
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WidgetSeekBarGraduation">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.125</item>
        <item name="android:gravity">center</item>
        <item name="android:text">#</item>
        <item name="android:textColor">@color/accent_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
    </style>
</resources>
