<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:textColorLink">@color/accent</item>
        <item name="android:textColorLinkInverse">@color/accent_light</item>

        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/AppActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/light_primary_text</item>

        <!-- Support library compatability -->
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="actionBarTabTextStyle">@style/AppActionBarTabText</item>
        <item name="actionMenuTextColor">@color/light_primary_text</item>

        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="windowActionModeOverlay">true</item>

        <item name="android:popupMenuStyle">@style/UwPopupMenu</item>
    </style>

    <style name ="UwPopupMenu" parent="android:Widget.Holo.Light.PopupMenu">
        <!-- version for pre-Lollipop - doesn't throw an error, but doesn't seem to do anything -->
        <item name="overlapAnchor">true</item>
        
        <item name="android:popupBackground">@drawable/copy_abc_popup_background_mtrl_mult</item>
    </style>

</resources>