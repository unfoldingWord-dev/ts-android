<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/leftToolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

     <!--top -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top">

        <ImageButton
            android:id="@+id/action_read"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/icon_study_inactive"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/action_chunk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/icon_frame_inactive"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/action_review"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="16dp"
            android:src="@drawable/icon_check_inactive"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- middle -->
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RelativeLayout>
    </FrameLayout>

    <!-- bottom -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom">
        <ImageButton
            android:id="@+id/action_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>


</LinearLayout>